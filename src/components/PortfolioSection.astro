---
// src/components/PortfolioSection.astro
import { Image } from "astro:assets";

import img1 from "../assets/local-store.jpg";
import img2 from "../assets/google-ads.jpg";
import img3 from "../assets/instagram-content.jpg";

const projetos = [
  {
    imagem: img1,
    titulo: "Landing Page para Loja Local",
    descricao: "Campanha com SEO local + WhatsApp",
  },
  {
    imagem: img2,
    titulo: "Google Ads para prestador de serviços",
    descricao: "Resultados em 3 dias com leads segmentados",
  },
  {
    imagem: img3,
    titulo: "Conteúdo estratégico no Instagram",
    descricao: "Aumento de engajamento e autoridade",
  },
];
---

<section id="portfolio" class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-6 text-center">
    <h2 class="text-3xl md:text-4xl font-title text-primary mb-10">
      Portfólio
    </h2>
    <div class="grid md:grid-cols-3 gap-6">
      {
        projetos.map((p) => (
          <div class="bg-gray-100 rounded-lg overflow-hidden shadow-md text-left">
            <Image
              src={p.imagem}
              alt={p.titulo}
              class="w-full object-cover object-top rounded-t-lg"
              format="webp"
              widths={[400, 600, 900]}
              sizes="(max-width: 768px) 100vw, 33vw"
              loading="lazy"
            />

            <div class="p-4">
              <h3 class="font-title text-lg text-primary mb-1">{p.titulo}</h3>
              <p class="font-body text-sm text-gray-600">{p.descricao}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
